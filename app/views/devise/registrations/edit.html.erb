<section class=" py-1 ">
<div class="w-full lg:w-8/12 px-4 mx-auto mt-6">
  <div class="relative flex flex-col min-w-0 break-words w-full mb-6 shadow-lg rounded-lg bg-gray-100 border-0">
    <div class="rounded-t bg-white mb-0 px-6 py-6">
      <div class="text-center flex justify-between">
        <h6 class="text-gray-700 text-xl font-bold">
          My account
        </h6>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-pink-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
    </div>
    <hr class="border-b-1 border-gray-300">
    <div class="flex-auto bg-white px-4 lg:px-10 py-10 pt-0">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <h6 class="text-gray-400 text-sm mt-3 mb-6 font-bold uppercase">
          User Information
        </h6>
        <div class="flex flex-wrap">
          <div class="w-full lg:w-6/12 px-4">
            <div class="relative w-full mb-3">
              <%= f.label :username, class:"block uppercase text-gray-600 text-xs font-bold mb-2"  %>
              <%= f.text_field :username, autofocus: true, autocomplete: "username", class:"text-gray-600 border-0 px-3 py-3 rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" %>
              <%= field_has_error(:username, resource)%>
            </div>
          </div>
          <div class="w-full lg:w-6/12 px-4">
            <div class="relative w-full mb-3">
              <%= f.label :email, class:"block uppercase text-gray-600 text-xs font-bold mb-2"  %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"border-0 px-3 py-3 rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" %>
              <%= field_has_error(:email, resource)%>
            </div>
          </div>
          <div class="w-full lg:w-6/12 px-4">
            <div class="relative w-full mb-3">
              <%= f.label :first_name, class:"block uppercase text-gray-600 text-xs font-bold mb-2"  %>
              <%= f.text_field :first_name, autofocus: true, class:"border-0 px-3 py-3 rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" %>
              <%= field_has_error(:first_name, resource)%>
            </div>
          </div>
          <div class="w-full lg:w-6/12 px-4">
            <div class="relative w-full mb-3">
              <%= f.label :last_name, class:"block uppercase text-gray-600 text-xs font-bold mb-2"  %>
              <%= f.text_field :last_name, autofocus: true, class:"border-0 px-3 py-3 rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" %>
              <%= field_has_error(:last_name, resource)%>
            </div>
          </div>
        </div>

        <hr class="mt-6 border-b-1 border-gray-300">

        <h6 class="text-gray-400 text-sm mt-3 mb-6 font-bold uppercase">
          Password
        </h6>
        <div class="flex flex-wrap mb-2">
          <div class="w-full lg:w-6/12 px-4">
            <div class="relative w-full mb-3">
              <%= f.label :current_password, class:"block uppercase text-gray-600 text-xs font-bold mb-2"%>
              <%= f.password_field :current_password, autocomplete: "current-password", class:"border-0 px-3 py-3 rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150", placeholder:"current password"%>
              <%= field_has_error(:current_password, resource)%>
            </div>
          </div>
          <div class="w-full lg:w-6/12 px-4">
            <div class="relative w-full mb-3">
              <label class="block uppercase text-gray-600 text-xs font-bold mb-2">
                Change password
              </label>
              <%= f.password_field :password, autocomplete: "new-password", class:"border-0 px-3 py-3 rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150", placeholder:"new"%>
            </div>
          </div>
        </div>
        <div class="text-center w-full px-4">
          <%= button_tag type:'submit', class:"justify-center items-center text-pink-600 w-1/2 mx-auto max-w-sm rounded-md text-center bg-pink-200 py-2 px-4 inline-flex items-center focus:outline-none" do %>
            <svg
            fill="none"
            class="w-4 mr-2"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
            />
          </svg>Update
          <% end %>
        </div>
      <% end %>
    </div>
    <hr class="border-b-1 border-gray-300">
      <div class="w-full bg-white p-4 text-right text-gray-500">
        <%= link_to registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"inline-flex items-center focus:outline-none mr-4" do %>
        <svg
          fill="none"
          class="w-4 mr-2"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
          />
        </svg>Delete account
        <% end %>
      </div>
  </div>
</div>
</section>