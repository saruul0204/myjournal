<div class="px-4 py-5 w-full mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8">
  <div class="relative flex items-center justify-between">
    <a href="/" class="inline-flex items-center">
      <span class="ml-2 text-xl font-bold tracking-wide text-gray-800 uppercase">My journal</span>
    </a>
    <ul class="flex items-center hidden space-x-8 lg:flex">
      <li><%= link_to "Home", root_path, class: "font-medium tracking-wide text-gray-700 transition-colors duration-200 hover:text-deep-purple-accent-400"%></li>
      <% if user_signed_in? %>
        <li><%= link_to "My records", posts_path, class: "font-medium tracking-wide text-gray-700 transition-colors duration-200 hover:text-deep-purple-accent-400"%></li>
      <% end %>
      <li><%= link_to "Contact us", pages_contact_path, class: "font-medium tracking-wide text-gray-700 transition-colors duration-200 hover:text-deep-purple-accent-400"%></li>
      </ul>
    <ul class="flex items-center hidden space-x-8 lg:flex">
       <% if user_signed_in? %>
       <li><%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete } , class:"font-medium tracking-wide text-gray-700 transition-colors duration-200 hover:text-deep-purple-accent-400" %></li>
      <% else %>
      <li><%= link_to "Sign in", new_user_session_path, class:"font-medium tracking-wide text-gray-700 transition-colors duration-200 hover:text-deep-purple-accent-400" %></li>
      <li><%= link_to "Sign up", new_user_registration_path, class:"inline-flex items-center justify-center w-full h-12 px-6 font-medium tracking-wide text-white transition duration-200 rounded shadow-md md:w-auto bg-gray-400 hover:bg-gray-600 focus:shadow-outline focus:outline-none" %></li>
      <% end %>
    </ul>
<!-- Mobile menu -->
    <div data-controller="dropdown" class="lg:hidden z-40">
      <button data-action="click->dropdown#hamburger" aria-label="Open Menu" title="Open Menu" class="p-2 -mr-1 transition duration-200 rounded focus:outline-none focus:shadow-outline hover:bg-deep-purple-50 focus:bg-deep-purple-50">
        <svg class="w-5 text-gray-600" viewBox="0 0 24 24">
          <path fill="currentColor" d="M23,13H1c-0.6,0-1-0.4-1-1s0.4-1,1-1h22c0.6,0,1,0.4,1,1S23.6,13,23,13z"></path>
          <path fill="currentColor" d="M23,6H1C0.4,6,0,5.6,0,5s0.4-1,1-1h22c0.6,0,1,0.4,1,1S23.6,6,23,6z"></path>
          <path fill="currentColor" d="M23,20H1c-0.6,0-1-0.4-1-1s0.4-1,1-1h22c0.6,0,1,0.4,1,1S23.6,20,23,20z"></path>
        </svg>
      </button>
<!-- Mobile menu dropdown -->
      <div data-dropdown-target="dropdown" class="absolute top-0 left-0 w-full hidden">
        <div class="p-5 bg-white border rounded shadow-sm">
          <div class="flex items-center justify-between mb-4">
            <div>
            <%=link_to 'My Journal', root_path, class:"text-xl font-bold tracking-wide text-gray-800 uppercase"%>
            </div>
            <div>
              <button data-action="click->dropdown#hamburger" aria-label="Close Menu" title="Close Menu" class="p-2 -mt-2 -mr-2 transition duration-200 rounded hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline">
                <svg class="w-5 text-gray-600" viewBox="0 0 24 24">
                <path fill="currentColor" d="M19.7,4.3c-0.4-0.4-1-0.4-1.4,0L12,10.6L5.7,4.3c-0.4-0.4-1-0.4-1.4,0s-0.4,1,0,1.4l6.3,6.3l-6.3,6.3 c-0.4,0.4-0.4,1,0,1.4C4.5,19.9,4.7,20,5,20s0.5-0.1,0.7-0.3l6.3-6.3l6.3,6.3c0.2,0.2,0.5,0.3,0.7,0.3s0.5-0.1,0.7-0.3 c0.4-0.4,0.4-1,0-1.4L13.4,12l6.3-6.3C20.1,5.3,20.1,4.7,19.7,4.3z"></path>
                </svg>
              </button>
            </div>
          </div>
          <nav>
            <ul class="space-y-4">
              <li><%= link_to 'My records', posts_path, aria:{ label:"Browse salons" }, title:"Browse salons", class:"font-medium tracking-wide text-gray-700 transition-colors duration-200 hover:text-pink-600"%></li>
              <li><%= link_to 'Contact  ', pages_contact_path, aria:{ label:"Contact" }, title:"Contact", class:"font-medium tracking-wide text-gray-700 transition-colors duration-200 hover:text-pink-600"%></li>
               <% if user_signed_in? %>
                  <li><%= link_to t('.sign_out'), destroy_user_session_path, method: :delete, class:"font-medium tracking-wide text-gray-700 transition-colors duration-200 hover:text-pink-600" %></li>
                 <% else %>
                  <li><%= link_to t('.sign_in'), new_user_session_path, aria:{ label:"Sign in" }, title:"Sign in", class:"font-medium tracking-wide text-gray-700 transition-colors duration-200 hover:text-pink-600"%></li>
                  <li><%= link_to t('.sign_up'), new_user_registration_path, class:"font-medium tracking-wide text-gray-700 transition-colors duration-200 hover:text-pink-600", aria:{ label:"Sign up" }, title:"Sign up"%></li>
                <% end %>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>
