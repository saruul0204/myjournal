<section class="text-gray-600 body-font relative h-full">
  <div class="absolute inset-0 bg-gray-300">
    <iframe width="100%" height="100%" frameborder="0" marginheight="0" marginwidth="0" title="map" scrolling="no" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d387190.2799020023!2d-74.25987151233467!3d40.69767006580528!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c24fa5d33f083b%3A0xc80b8f06e177fe62!2sNew%20York%2C%20NY%2C%20USA!5e0!3m2!1sen!2smk!4v1641909992951!5m2!1sen!2smk" style="filter:  contrast(1.2) opacity(0.4);"></iframe>
  </div>
  <div class="container px-5 py-24 mx-auto flex">
    <div class="lg:w-2/5 md:w-1/2 bg-white rounded-lg p-8 flex flex-col md:ml-auto w-full mt-10 md:mt-0 relative z-10 shadow-md">
      <h2 class="text-gray-900 text-3xl mb-1 font-extrabold title-font">Connect with us</h2>
      <p class="leading-relaxed mb-5 text-gray-600">Fill in the form to start a conversation and our team will get back to you ASAP.</p>

      <%= form_with url: "/create_contact", model: @contact, scope: :contact , data: { turbo: false } do |f|%>
          <div class="relative mb-4">
              <%= f.label :full_name, "Name",class:"leading-7 text-sm text-gray-600 "%>
              <%= f.text_field :full_name, required: true, placeholder: "Enter Your Name", class: "input w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
              <%= field_has_error(:full_name, @contact)%>
          </div>
          <div class="relative mb-4">
              <%= f.label :email, "Email", class:"leading-7 text-sm text-gray-600 "%>
              <%= f.email_field :email, required: true, placeholder: "Enter Your Email", class:"email w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"%>
              <%= field_has_error(:email, @contact)%>
          </div>
          <div class="relative mb-4">
              <%= f.label :phone, "Phone", class:"leading-7 text-sm text-gray-600 "%>
              <%= f.text_field :phone, required: true, placeholder: "Enter Your Phone Number", class:"input w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"%>
              <%= field_has_error(:phone, @contact)%>
          </div>
          <div class="relative mb-4">
              <%= f.label :message,"Message", class: "leading-7 text-sm text-gray-600"%>
              <%= f.text_area :message, required: true, placeholder: "Enter Your Message", class:"textarea w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 h-32 text-base outline-none text-gray-700 py-1 px-3 resize-none leading-6 transition-colors duration-200 ease-in-out"%>
              <%= field_has_error(:message, @contact)%>
          </div>
          <%= f.submit "Submit Message", class:" text-white py-2 px-6 font-medium tracking-wide text-white transition duration-200 shadow-md bg-blue-500 rounded-md hover:bg-blue-400 focus:outline-none focus:bg-blue-400"%>
      <% end %>

      <p class="text-xs text-gray-500 mt-3">Chicharrones blog helvetica normcore iceland tousled brook viral artisan.</p>
    </div>
  </div>
</section>