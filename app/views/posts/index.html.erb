
<div class="text-center mt-8">
  <%= link_to new_post_path, class:"inline-flex items-center justify-center w-full h-12 px-6 font-medium tracking-wide text-white transition duration-200 shadow-md md:w-auto bg-blue-500 rounded-md hover:bg-blue-400 focus:outline-none focus:bg-blue-400" do %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-white">
      <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
    </svg>
    <p class="ml-3 font-medium tracking-wide text-white truncate">
        Write new record
    </p>
  <% end %>
</div>
<div aria-label="group of cards" class="focus:outline-none py-8 space-y-6 w-full">
    <div class="items-center justify-center w-full">
      <% @posts.each do |post| %>
        <div aria-label="card 1" class="hover:shadow-lg transform transition duration-500 hover:scale-105 focus:outline-none lg:w-6/12 mx-auto my-6 bg-white dark:bg-gray-800  p-6 shadow rounded">
          <div class="flex items-center border-b border-gray-200 dark:border-gray-700  pb-6">
            <div class="w-6 h-6 bg-gray-200 dark:bg-gray-900  rounded-full flex flex-shrink-0"></div>
            <div class="flex items-start justify-between w-full">
              <div class="pl-3 w-full">
                <p class="focus:outline-none text-xl font-medium leading-5 text-gray-800 dark:text-white "><%= post.title%></p>
                <p class="focus:outline-none text-sm leading-normal pt-2 text-gray-500 dark:text-gray-200 "><%= l(post.created_at, format: :short)%></p>
              </div>
              <div role="img" aria-label="bookmark">
                <svg  class="focus:outline-none dark:text-white text-gray-800" width="28" height="28" viewBox="0 0 28 28" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M10.5001 4.66667H17.5001C18.1189 4.66667 18.7124 4.9125 19.15 5.35009C19.5876 5.78767 19.8334 6.38117 19.8334 7V23.3333L14.0001 19.8333L8.16675 23.3333V7C8.16675 6.38117 8.41258 5.78767 8.85017 5.35009C9.28775 4.9125 9.88124 4.66667 10.5001 4.66667Z" stroke="currentColor" stroke-width="1.25" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
              </div>
            </div>
          </div>
          <div class="px-2">
            <p class="focus:outline-none text-md leading-5 py-4 text-gray-600 dark:text-gray-200 "><%= post.content[0, 200] %>...</p>
            <div class="focus:outline-none flex">
              <%= link_to post_path(post), class:"inline-flex items-center justify-center h-12 px-6 mr-6 font-medium tracking-wide text-white transition duration-200 shadow-md bg-blue-500 rounded-md hover:bg-blue-400 focus:outline-none focus:bg-blue-400" do %>
                See more
                <svg class="inline-block w-3 ml-2" fill="currentColor" viewBox="0 0 12 12">
                  <path d="M9.707,5.293l-5-5A1,1,0,0,0,3.293,1.707L7.586,6,3.293,10.293a1,1,0,1,0,1.414,1.414l5-5A1,1,0,0,0,9.707,5.293Z"></path>
                </svg>
                <% end %>
            </div>
          </div>
        </div>
      <% end %>
</div>
