<%= form_with(model: post, class: "contents") do |form| %>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    <%= field_has_error(:title, @post )%>
  </div>

  <div class="my-5">
    <%= form.label :content %>
    <%= form.text_area :content, rows: 10, style: 'width:100%;', class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    <%= field_has_error(:content, @post )%>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-md py-3 px-5 mb-8 bg-blue-500 hover:bg-blue-400 focus:outline-none focus:bg-blue-400 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
